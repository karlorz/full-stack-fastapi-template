# Overrides for testing path-based API routing on a single domain.
# Load with: docker compose --env-file .env --env-file .env.path-based-api -f docker-compose.yml ...

DOMAIN=dashboard.localhost
FRONTEND_HOST=http://dashboard.localhost
FRONTEND_API_URL=http://dashboard.localhost
BACKEND_CORS_ORIGINS="http://dashboard.localhost"
ROUTING_MODE=path
ENABLE_ADMINER=false
COMPOSE_ENV_FILE=.env.path-based-api
